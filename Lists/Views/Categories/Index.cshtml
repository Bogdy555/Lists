<div class="vertical-container">
    @if (ViewBag.Message != null)
    {
        <div class="cute-card page-sizer vertical-container">
            <p class="server-message">@ViewBag.Message</p>
        </div>
        <br />
    }
    <form class="cute-form cute-card page-sizer vertical-container" action="/Categories/New/" method="post">
        <input class="form-input-hidden" type="text" name="Password" value="@ViewBag.Password" />
        <div class="form-combo">
            <label class="form-label">Name</label>
            <br />
            <input class="form-input cute-subcard content-sizer" type="text" name="category.Name" />
        </div>
        <br />
        <div class="form-combo">
            <label class="form-label">Description</label>
            <br />
            <input class="form-input cute-subcard content-sizer" type="text" name="category.Description" />
        </div>
        <br />
        <button class="form-submit-button cute-subcard content-sizer" type="submit">Done</button>
    </form>
    @if (ViewBag.Categories.Count != 0)
    {
        <br />
        <div class="cute-card page-sizer vertical-container">
            @for (int index = 0; index < ViewBag.Categories.Count; index++)
            {
                <div>
                    <form action="/Items/@ViewBag.Categories[index].Name/" method="post">
                        <input class="form-input-hidden" type="text" name="Password" value="@ViewBag.Password" />
                        <button type="submit">@ViewBag.Categories[index].Name</button>
                    </form>
                    <br />
                    <p>@ViewBag.Categories[index].Description</p>
                    <br />
                    <form action="/Categories/Delete/@ViewBag.Categories[index].Name/" method="post">
                        <input class="form-input-hidden" type="text" name="Password" value="@ViewBag.Password" />
                        <button type="submit">Delete</button>
                    </form>
                </div>

                @if (index != ViewBag.Categories.Count - 1)
                {
                    <br />
                }
            }
        </div>
    }
</div>
