<div class="vertical-container">
    <div class="cute-card page-sizer vertical-container">
        <form action="/Categories/" method="post">
            <input class="form-input-hidden" type="password" name="Password" value="@ViewBag.Password" />
            <button type="submit">Back to categories</button>
        </form>
        <p>Category: @ViewBag.CategoryName</p>
    </div>
    @if (ViewBag.Message != null)
    {
        <div class="cute-card page-sizer vertical-container">
            <p class="server-message">@ViewBag.Message</p>
        </div>
    }
    <form class="cute-form cute-card page-sizer vertical-container" action="/Items/New/@ViewBag.CategoryName/" method="post">
        <input class="form-input-hidden" type="password" name="Password" value="@ViewBag.Password" />
        <input class="form-input-hidden" type="text" name="item.CategoryName" value="@ViewBag.CategoryName" />
        <div class="form-combo vertical-container">
            <label class="form-label">Name</label>
            <input class="form-input cute-subcard content-sizer" type="text" name="item.Name" />
        </div>
        <div class="form-combo vertical-container">
            <label class="form-label">Description</label>
            <input class="form-input cute-subcard content-sizer" type="text" name="item.Description" value="Placeholder" />
        </div>
        <button class="form-submit-button cute-subcard content-sizer" type="submit">Done</button>
    </form>
    @if (ViewBag.Items.Count != 0)
    {
        <div class="cute-card page-sizer vertical-container">
            @for (int index = 0; index < ViewBag.Items.Count; index++)
            {
                <div class="vertical-container">
                    <form action="/Subitems/@ViewBag.Items[index].Name/@ViewBag.Items[index].CategoryName/" method="post">
                        <input class="form-input-hidden" type="password" name="Password" value="@ViewBag.Password" />
                        <button type="submit">@ViewBag.Items[index].Name</button>
                    </form>
                    <p>@ViewBag.Items[index].Description</p>
                    <form action="/Items/Delete/@ViewBag.CategoryName/@ViewBag.Items[index].Name/" method="post">
                        <input class="form-input-hidden" type="password" name="Password" value="@ViewBag.Password" />
                        <button type="submit">Delete</button>
                    </form>
                    <button onclick="MakeEditItem(this, '@ViewBag.CategoryName')">Edit</button>
                </div>
            }
        </div>
    }
</div>
